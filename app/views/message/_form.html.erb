<%= simple_form_for @message, url: create_message_path  do |f| %>
  To: <%= f.collection_select :to_user_id, User.all, :id , :email %>
  <%= f.hidden_field :from_user_id, value: current_user.id %>
  <br/>

  Message: <%= f.input :body, as: :text %>

  	<%= f.button :submit, class: 'ui primary submit icon button' %>
<% end %>