<% if @like =  tweet.likes.find_by(user_id: current_user.id) %>
  <%= link_to(like_path(@like), method: :delete, remote: true, class: "ui label") do %>
    <i class="thumbs up icon"></i>
    <%= tweet.likes.count %>
  <% end %>
<% else %>
  <%= link_to(tweet_likes_path(tweet), method: :post, remote: true, class: "ui label") do %>
    <i class="thumbs outline up icon"></i>
    <%= tweet.likes.count %>
  <% end %>
<% end %>

