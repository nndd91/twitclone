<div class="ui container" id="loginbackground">
  <div class="ui two column centered grid">
    <div class="column">
      <div class="ui segment">
        <h2>Forgot your password?</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "ui form segment" }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>

            <div class="actions">
              <%= f.submit "Send me reset password instructions", :class=>"ui primary submit button" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
