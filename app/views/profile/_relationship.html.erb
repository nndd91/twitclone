<div class="ui segments">
  Relationship Count: <%= @relationship.count %>
  <div class="ui selection list">
    <% @relationship.each do |user| %>
      <div class="item">
        <%= image_tag(user.avatar.thumb.url, :class => 'ui mini avatar image' )%>
        <div class="content">
          <div class="header">
            <li><%= link_to user.email, profile_path(user.id) %>
          </div>
        </div>
      </div>
    <% end %>
    </li>

    <%= link_to 'Back to Index', profile_path + "/" + @user.id.to_s %>
  </li>
</div>
