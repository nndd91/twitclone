<%= render 'layouts/navbar'%>
<%= render 'layouts/stats'%>

<h1>Tweets!!</h1>



<div class="ui comments">
	<div class="comment">
		<a class="avatar">
			<img src="/images/avatar/small/joe.jpg">
		</a>
		<div class="content">
			<a class="author">Joe Henderson</a>
			<div class="metadata">
				<div class="date">1 day ago</div>
			</div>
			<% if @tweets.exists? %>
			<% @tweets.each do |tweet| %>
			<div class="text">
				feafaefa	faaefaegaegefg
				<%= tweet.body %>    
			</div>

			<%= link_to 'Show', tweets_show_path(tweet) %>
			<%= link_to 'Edit', tweets_edit_path(tweet) %>
			<% end %>
			<% end %>
			<div class="actions">
				<a class="reply">Reply</a>
			</div>
		</div>
	</div>
	<%= link_to 'New Tweet', tweets_new_path %>