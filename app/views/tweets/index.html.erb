<div id="retweet" class="hidden">
</div>
<%= render 'layouts/navbar'%>
<div class="ui container">
  <div class="ui sixteen wide centered grid">
    <div class="ui twelve wide column">
      <%= render 'profile/profile_header_stats' %>
    </div>
    <div class="ui twelve wide column">
      <% if flash[:notice] %>
        <div class="alert alert-warning" role="alert" style="border: solid 1px red;padding: 5px; color: red;border-radius: 3px; background-color: #ed7b7b">
          <%= flash[:notice] %>
        </div>
        <br />
      <% end %>
      <% if @tweets.present? %>
        <%= render 'list' %>
      <% else %>
        <div class="ui segment">
          No tweets here.. Follow more people or make a new one!
        </div>
      <% end %>
    </div>
  </div>
</div>
