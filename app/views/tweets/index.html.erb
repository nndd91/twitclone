<div id="retweet" class="hidden">
</div>
<%= render 'layouts/navbar'%>
<div class="ui container segments">
  <%= render 'layouts/stats'%>

  <div class="ui sixteen wide centered grid">
    <div class="ui twelve wide column">
      <% if flash[:notice] %>
        <div class="alert alert-warning" role="alert" style="border: solid 1px red;padding: 5px; color: red;">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div style="display: flex; justify-content: flex-end;">
        <%= link_to 'New Tweet', new_tweet_path, remote: true, class: 'ui primary submit icon button' %>
      </div>
      <%= render 'list' %>
        <%= paginate @tweets %>
        <%= page_entries_info @tweets %>
    </div>
  </div>
</div>
