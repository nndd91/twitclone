<div class="ui container">
	New Tweet
	<div class="ui form segment">
		<%= simple_form_for @tweet do |f| %>
			<div class="field">
				<%= f.input :body, as: :text %>
			</div>
			<div class="field">
				<%= f.file_field :media_location %>
				<%= f.hidden_field :media_location_cache %>
			</div>
			<div class="field">
				<% if @tweet.images.present? %>
					<% @tweet.images.each do |image| %>
						<%= image_tag(image.media_location.thumb.url) %>
						<%= f.label :remove_media_location, 'Remove' %>
            <%= f.input :remove_media_location, as: :boolean, label: false%>
            <%= button_to "Remove", image.remove_avatar %>
					<% end %>
				<% end %>
			</div>

			<div class="actions">
				<%= f.button :submit, class: "ui primary submit button"%>
			</div>


		<% end %>
	</div>

</div>
