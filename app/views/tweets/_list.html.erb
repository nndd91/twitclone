<% if @tweets.exists? %>
<div class="ui segments">
  <% @tweets.each do |tweet| %>
    <div class="ui segment">
      <div class="ui sixteen wide grid">
        <div class="two wide column">
          <img class="ui medium circular image" src="https://forumac.nathanshq.com/uploads/user/12/thumb_nequesapientedeleniti.png"></img>
        </div>
        <div class="fourteen wide column">
          <div class="row">
            <%= link_to tweet.user.email, profile_path(tweet.user)%>
          </div>
          <div class="row">
            <%= tweet.body %>
          </div>
          <%= link_to 'Show', tweet_path(tweet) %>
          <%= link_to 'Edit', edit_tweet_path(tweet) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% end %>
<div class="actions">
  <a class="reply">Reply</a>
</div>


