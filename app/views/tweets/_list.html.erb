(<%= @tweets.count %>)
<% if @tweets.exists? %>
  <% @tweets.each do |tweet| %>
    <li><%= tweet.body %> 
    by: <%= link_to tweet.user.email, profile_path(tweet.user)%>
    <%= link_to 'Show', tweet_path(tweet) %>
    <%= link_to 'Edit', edit_tweet_path(tweet) %>
  <% end %>
<% end %>

<%= link_to 'New Tweet', new_tweet_path %>